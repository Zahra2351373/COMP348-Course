number = 11
#First form
case number
    when 1, 3, 5, 7, 9
        puts "Odd."
    when 0, 2, 4, 6, 8, 10
        puts "Even."
    else
        puts "Number is out of range."
end

#Second form
case number
    when number.odd
        puts "Odd."
    when number.even
        puts "Even."
    else
        puts "Number is out of range."
end
