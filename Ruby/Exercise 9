number = 11

#First form
while number > 0 do
    number -= 1
    puts number
end

number = 11

#Second form
until number == 0
    number -= 1
    puts number
end 

number = 11

#Third form 
puts (number -= 1) while number > 0

number = 11

#Fourth form 
puts (number -= 1) until number == 0

number = 11

#Another example
loop do 
    puts number
    number -= 1
    next if number == 3
    break if number < 0
    redo if number > 0
end
