var1=1
var2=2

#First form of if-statement
if var1==var2 then
    puts "var1 and var2 are equal"
elsif var1 < var2 then
    puts "var1 is smaller than var2"
elsif var1 > var2 then
    puts "var1 is larger than var2"
end

#Second form of if-statement
puts "var1 and var2 are equal" if var1==var2
puts "var1 is smaller than var2" if var1 < var2
puts "var1 is larger than var2" if var1 > var2

#Third form of if-statement
var1 < var2 ? (puts  "var1 is smaller than var2" ) : (puts "var1 is larger than var2" if var1 > var2)
#or
var1 < var2 ? (puts  "var1 is smaller than var2" ) :
    (var1 > var2 ? (puts  "var1 is smaller than var2") : (puts "var1 and var2 are equal") )
    
#Fourth form
unless var1 < var2 then
    unless var1 > var2 then
        puts "var1 and var2 are equal"
    else
        puts "var1 is larger than var2"
    end
else
    puts "var1 is smaller than var2"
end

#Fifth form
puts "var1 and var2 are equal" unless ((var1 < var2) || (var1 > var2))
    



